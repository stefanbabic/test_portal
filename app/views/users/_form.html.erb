<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for @user do |u| %>
      <%= render 'shared/error_messages', object: @user %>

        <div id="name">
          <span class="left">
            <%= u.label :first_name, 'First name:' %>
            <%= u.text_field :first_name, class: "form-control" %>
          </span>
          <span class="right">
            <%= u.label :last_name, 'Last name:' %>
            <%= u.text_field :last_name, class: "form-control" %><br />
          </span>
        </div>

        <div id="email">
          <%= u.label :email, 'Email:' %>
          <%= u.email_field :email, class: "form-control" %><br />
        </div>

        <div id="street">
          <%= u.label :street, 'Address:' %>
          <%= u.text_field :street, class: "form-control" %><br />
        </div>

        <div id="place">
          <span class="zip">
            <%= u.label :zip, 'Zip:' %>
            <%= u.text_field :zip, class: "form-control" %>
          </span>
          <span class="city">
            <%= u.label :city, 'City:' %>
            <%= u.text_field :city, class: "form-control" %><br />
          </span>
        </div>

        <div id="birthday">
          <%= u.label :birthday, 'Birthday:' %>
          <%= u.date_select :birthday, start_year: Date.today.year - 18,
            end_year: Date.today.year - 100,
            prompt: true, order: [:day, :month, :year],
            class: "form-control" %><br />
        </div>

        <div id="password">
          <span class="left">
            <%= u.label :password, 'Password:' %>
            <%= u.password_field :password, class: "form-control" %><br />
          </span>
          <span class="right">
            <%= u.label :password_confirmation, 'Password confirmation:' %>
            <%= u.password_field :password_confirmation,
              class: "form-control" %><br />
          </span>
        </div>

        <div class="button">
          <%= u.submit yield(:button_text), class: "btn btn-primary btn-block" %>
        </div>

    <% end %>
  </div>
</div>
