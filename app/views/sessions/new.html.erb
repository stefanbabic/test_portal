<% provide(:title, "Log In") %>
<h1>Log In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |s| %>

      <div>
        <%= s.label :email, 'Email:' %>
        <%= s.email_field :email, class: "form-control" %>
      </div>

      <div>
        <%= s.label :password, 'Password:' %>
        <%= s.password_field :password, class: "form-control" %>
      </div>

      <div>
        <%= s.label :remember_me, class: "checkbox inline" do %>
          <%= s.check_box :remember_me %>
          <span>Remember me</span>
        <% end %>
      </div>

      <div class="button">
        <%= s.submit "Log In", class: "btn btn-primary btn-block" %>
      </div>

    <% end %>

    <p class="center-text">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
